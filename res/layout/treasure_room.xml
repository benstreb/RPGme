<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <LinearLayout
       android:layout_width="209dp"
       android:layout_height="204dp"
       android:layout_x="58dp"
       android:layout_y="44dp"
       android:orientation="vertical" >

       <ImageView
           android:id="@+id/treasureImg"
           android:layout_width="130dp"
           android:layout_height="58dp"
           android:layout_gravity="center_horizontal"
           android:src="@drawable/sword1_red" />

        <ImageView
            android:id="@+id/treasureChestImg"
            android:layout_width="74dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/treasure_chest" />
        
        <TextView
            android:id="@+id/treasureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="You found treasure!" />

    </LinearLayout>

</AbsoluteLayout>
